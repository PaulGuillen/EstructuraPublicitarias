<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ROAL" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_principal</item>
        <item name="colorPrimaryVariant">@color/orange_principal</item>
        <!-- Text button color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_principal</item>
        <item name="colorSecondaryVariant">@color/orange_principal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/CustomTextInputLayout</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="passwordToggleTint">@color/toggle_icon_color_selector</item>
    </style>

    <style name="SplashTheme" parent="Theme.ROAL">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="titulosGeneral" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="subtitulosGeneral" parent="Theme.ROAL">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
    </style>

    <style name="titulosNavbar" parent="Theme.ROAL">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="botonesGeneral" parent="Theme.ROAL">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textNumbersVerification" parent="Theme.ROAL">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/orange_principal</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/orange_principal</item>
    </style>

    <style name="InputTextEditTextStyleRegular">
        <item name="android:textColor">#222222</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#c5c5c5</item>
        <item name="colorControlHighlight">#c5c5c5</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>


    <style name="BasicMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/orange_principal</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>